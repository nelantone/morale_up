<% environment.context_class.instance_eval { include QuotesHelper } %>
.article-bg {
  opacity: .33;
  position: fixed;
  width: 100%;
  height:100%;
}

html {
    font-family: arial;
    font-size: 26px;
}


#body_title {
    position: absolute;
    left: 35%;
    top: 5%;
}

#body_center {
    height: 10em;
    margin: 0;
    top: -10%;
    left: 0%;
}

#random_quote {
    margin-left: 0;
    height: 10em;
    position: fixed;
    margin: 0;
    top: 0%;
    left: 0%;
}

#current_quote {
    margin-left: 300px;
    margin-right: 20%;
    margin-top: 200px;
}

#quote_num {
    font-size: 13px;
}

#quote,
#genre,
#author {
    font-size: 27px;
    line-height: 40px;
}
