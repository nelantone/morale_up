<% environment.context_class.instance_eval { include QuotesHelper } %>
body,
#refresh_bg {
    background-image: url(<%= random_flickr_rrs %>);
}

html {
    font-family: arial;
    font-size: 26px;
}

#random_quote {
    margin-left: 15%;
    margin-right: 20%;
}

#body_title {
    position: absolute;
    left: 35%;
    top: 5%;
}

#body_center {
    height: 10em;
    position: relative;
    margin: 0;
    position: absolute;
    top: 35%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%)
}

#quote_num {
    font-size: 13px;
}

#quote,
#genre,
#author {
    font-size: 27px;
    line-height: 40px;
}
